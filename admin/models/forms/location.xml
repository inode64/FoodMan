<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" addfieldpath="/administrator/components/com_foodman/models/fields">

        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                description="JGLOBAL_FIELD_ID_DESC"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="name"
                type="text"
                label="COM_FOODMAN_FIELD_NAME_LABEL"
                description="COM_FOODMAN_FIELD_NAME_DESC"
                class="input-xxlarge input-large-text"
                size="40"
                required="true"
        />

        <field
                name="state"
                type="list"
                label="JSTATUS"
                description="COM_FOODMAN_FIELD_STATE_DESC"
                class="chzn-color-state"
                size="1"
                default="1"
        />

        <field
                name="language"
                type="contentlanguage"
                label="JFIELD_LANGUAGE_LABEL"
                description="COM_FOODMAN_FIELD_LANGUAGE_DESC"
        >
            <option value="*">JALL</option>
        </field>

        <field
                name="featured"
                type="radio"
                label="JFEATURED"
                description="COM_FOODMAN_FIELD_FEATURED_DESC"
                default="0"
                class="btn-group btn-group-yesno"
        >
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>

        <field
                name="description"
                type="editor"
                label="JGLOBAL_DESCRIPTION"
                description="COM_FOODMAN_FIELD_DESCRIPTION_DESC"
                filter="JComponentHelper::filterText"
                buttons="true"
                hide="readmore,pagebreak,module,article,contact,menu"
        />

        <field
                name="userid"
                type="fmusers"
                label="COM_FOODMAN_FIELD_USER_LABEL"
                description="COM_FOODMAN_FIELD_USER_DESC"
        />
    </fieldset>

    <fieldset name="publish" label="COM_FOODMAN_LABEL_DETAILS">

        <field
                name="created"
                type="calendar"
                label="JGLOBAL_FIELD_CREATED_LABEL"
                description="COM_FOODMAN_FIELD_CREATED_DESC"
                size="22"
                translateformat="true"
                showtime="true"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="fmusers"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                description="COM_FOODMAN_FIELD_CREATED_BY_DESC"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                description="COM_FOODMAN_FIELD_MODIFIED_DESC"
                class="readonly"
                size="22"
                readonly="true"
                translateformat="true"
                showtime="true"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="fmusers"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                description="COM_FOODMAN_FIELD_MODIFIED_BY_DESC"
                class="readonly"
                readonly="true"
                filter="unset"
        />

    </fieldset>

    <fields name="params" label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS">
        <fieldset name="image">
            <field
                    name="imageurl"
                    type="media"
                    label="COM_FOODMAN_FIELD_IMAGE_LABEL"
                    description="COM_FOODMAN_FIELD_IMAGE_DESC"
                    directory="foodman"
                    hide_none="1"
                    size="40"
            />

            <field
                    name="alt"
                    type="text"
                    label="COM_FOODMAN_FIELD_ALT_LABEL"
                    description="COM_FOODMAN_FIELD_ALT_DESC"
            />
        </fieldset>
    </fields>
</form>
