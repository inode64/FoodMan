<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details" addfieldpath="/administrator/components/com_foodman/models/fields">

        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                description="JGLOBAL_FIELD_ID_DESC"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="userid"
                type="fmusers"
                label="COM_FOODMAN_FIELD_USER_LABEL"
                description="COM_FOODMAN_FIELD_USER_DESC"
                readonly="true"
        />

        <field
                name="listid"
                type="fmlist"
                label="COM_FOODMAN_FIELD_LIST_LABEL"
                description="COM_FOODMAN_FIELD_LIST_DESC"
                readonly="trues"
        />

        <field
                name="products"
                type="subform"
                label="COM_FOODMAN_FIELD_PRODUCTS_LABEL"
                description="COM_FOODMAN_FIELD_PRODUCTS_DESC"
                multiple="true"
                min="1"
                max="100"
        >
            <form>
                <field
                        name="id"
                        type="hidden"
                />

                <field
                        name="process"
                        type="hidden"
                />

                <field
                        name="proid"
                        type="fmproduct"
                        label="COM_FOODMAN_FIELD_PRODUCT_LABEL"
                        description="COM_FOODMAN_FIELD_PRODUCT_DESC"
                        readonly="true"
                />

                <field
                        name="locid"
                        type="fmlocation"
                        label="COM_FOODMAN_FIELD_LOCATION_LABEL"
                        description="COM_FOODMAN_FIELD_LOCATION_DESC"
                />

                <field
                        name="quantity"
                        type="number"
                        min="0"
                        max="1000"
                        default="1"
                        step="1"
                        readonly="true"
                        label="COM_FOODMAN_FIELD_QUANTITY_LABEL"
                        description="COM_FOODMAN_FIELD_QUANTITY_DESC"
                        class="btn-group btn-group-number"
                />

                <field
                        name="bought"
                        type="number"
                        min="0"
                        max="1000"
                        default="0"
                        step="1"
                        label="COM_FOODMAN_FIELD_BOUGHT_LABEL"
                        description="COM_FOODMAN_FIELD_BOUGHT_DESC"
                        class="btn-group btn-group-number"
                />

                <field
                        name="price"
                        type="number"
                        min="0"
                        default="1"
                        label="COM_FOODMAN_FIELD_PRICE_LABEL"
                        description="COM_FOODMAN_FIELD_PRICE_DESC"
                        class="btn-group btn-group-number"
                />

                <field
                        name="comments"
                        type="text"
                        label="COM_FOODMAN_FIELD_COMMENTS_LABEL"
                        description="COM_FOODMAN_FIELD_COMMENTS_DESC"
                        class="input-xxlarge input-large-text"
                        size="120"
                />
            </form>
        </field>
    </fieldset>

    <fieldset name="publish" label="COM_FOODMAN_LABEL_DETAILS">

        <field
                name="created"
                type="calendar"
                label="JGLOBAL_FIELD_CREATED_LABEL"
                description="COM_FOODMAN_FIELD_CREATED_DESC"
                size="22"
                translateformat="true"
                showtime="true"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="fmusers"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                description="COM_FOODMAN_FIELD_CREATED_BY_DESC"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                description="COM_FOODMAN_FIELD_MODIFIED_DESC"
                class="readonly"
                size="22"
                readonly="true"
                translateformat="true"
                showtime="true"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="fmusers"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                description="COM_FOODMAN_FIELD_MODIFIED_BY_DESC"
                class="readonly"
                readonly="true"
                filter="unset"
        />

    </fieldset>
</form>
